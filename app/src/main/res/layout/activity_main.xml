            android:background="@drawable/curved_background_box"
            android:layout_centerHorizontal="true"


            android:alpha=".3"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">
        <ProgressBar
            android:id="@+id/foodBar"
            android:layout_width="match_parent"
            android:layout_height="11sp"
            android:layout_margin="5sp"
            android:progress="31"
            android:max="100"
            android:scaleY="1.5"
            android:progressTint="@color/food"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar
            android:id="@+id/sleepBar"
            android:layout_width="match_parent"
            android:layout_height="11sp"
            android:layout_margin="5sp"
            android:progress="31"
            android:max="100"
            android:scaleY="1.5"
            android:progressTint="@color/sleep"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar
            android:id="@+id/fitnessBar"
            android:layout_width="match_parent"
            android:layout_height="11sp"
            android:layout_margin="5sp"
            android:progress="31"
            android:max="100"
            android:scaleY="1.5"
            android:progressTint="@color/fitness"
            style="?android:attr/progressBarStyleHorizontal"/>
        <ProgressBar
            android:id="@+id/moodBar"
            android:layout_width="match_parent"
            android:layout_height="11sp"
            android:layout_margin="5sp"
            android:progress="31"
            android:max="100"
            android:scaleY="1.5"
            android:progressTint="@color/moodMeh"
            style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newEntry"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
